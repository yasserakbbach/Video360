<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:id="@+id/confirm_video_snapshots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirm_video_snapshots"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/confirm_video_snapshots"
        android:gravity="center"
        android:padding="8dp">

        <Button
            android:id="@+id/yes_confirm_video_snapshots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YES"/>

        <Button
            android:id="@+id/no_confirm_video_snapshots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NO"/>

    </LinearLayout>

</RelativeLayout>